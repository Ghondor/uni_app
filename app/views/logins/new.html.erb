<div class="container">
  <div class="row signup-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header center-align">Log in</h3>
        <div class="row">
          <%= form_for :logins, html: {class: "col s12"} do |f| %>
            <div class="row">
              <div class="input-field col m12 s12">
                <%= f.label :email %>
                <%= f.email_field :email, class: "validate", autofocus: true %>
              </div>
              <div class="input-field col m12 s12">
                <%= f.label :password, class: "active" %>
                <%= f.password_field :password, class: "validate" %>
              </div>
              <div class="input-field col s12 center">
                <%= f.button('Log in <i class="material-icons right">arrow_forward</i>'.html_safe, class: "waves-effect waves-light btn-large orange") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>