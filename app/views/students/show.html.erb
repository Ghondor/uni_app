<div class="row signup-form">
  <div class="col s12 m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <% if @student.courses.empty? %>
          None
        <% else %>
          <ul class="collection with-header black-text">
            <li class="collection-header"><h4>Course Enrollments:</h4></li>
            <% @student.courses.each do |course| %>
              <li class="collection-item"><%= course.name %></li>
            <% end %>
          </ul>
        <% end %>

      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons left">create</i> Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn-small" %>
    <% end %>
  </div>
</div>